@model IEnumerable<AsturTravel.Models.Destacados>

@{
    ViewData["Title"] = "Index";
}

<div style="background-color: #f2f2f2;
    margin-top:20px;
    border-collapse: collapse;
    border-radius: 14px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    color:#3a9962;
    padding:20px;">
    <p style="text-align:center">
        En esta sección se muestran los viajes destacados , que serán los que se añadiran al carrusel de la página principal.
    </p>
</div>

<p style="text-align:center;margin-top:20px;">
    <a class="btn btn-dark" asp-action="Create">Añadir viaje</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Viaje)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Viaje.Nombre)
            </td>
            <td>
                    <form style="border:none;background:none;box-shadow:none;" method="post" action="@Url.Action("Delete2", "Destacados", new { id = item.Id })">
                        @Html.AntiForgeryToken()
                        <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este elemento del carrusel?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                    </form>
       
                    
            </td>
        </tr>
}
    </tbody>
</table>

