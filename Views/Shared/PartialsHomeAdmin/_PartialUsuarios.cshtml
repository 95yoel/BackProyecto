@model IEnumerable<AsturTravel.Models.Usuario>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div id="contenidoUsuarios">
    <p>
        <a id="btnCrearUsuario" class="btn btn-dark">Nuevo usuario</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    DNI
                </th>
                <th>
                    TEL.
                </th>
                <th>
                    CODPOST
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @item.DNI
                    </td>
                    <td>
                        @item.Telefono
                    </td>
                    <td>
                        @item.CODPOST
                    </td>
                    <td>@item.fechaRegistro</td>
                    <td>
                        <button id="btnEditarUsuario" title="editar" onclick="editarUsuario(@item.Id)" style="border:none"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button> |
                        <form style="border:none;background:none;box-shadow:none;" method="post" action="@Url.Action("Delete2", "Usuarios", new { id = item.Id })">
                            @Html.AntiForgeryToken()
                            <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este destino?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/usuarios/usuarios.js"></script>
