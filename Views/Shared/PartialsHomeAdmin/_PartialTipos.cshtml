@model IEnumerable<AsturTravel.Models.TiposViaje>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div id="contenidoTipos">
    <p>
        <a id="btnNuevoTipo" class="btn btn-dark" >Nuevo Tipo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        <button id="btnEditarTipo" onclick="editarTipo(@item.Id)" style="border:none"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button> |
                        <form style="border:none;background:none;box-shadow:none;" method="post" action="@Url.Action("Delete2", "TiposViajes", new { id = item.Id })">
                            @Html.AntiForgeryToken()
                            <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este destino?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="/js/tiposviajes/tipos.js"></script>