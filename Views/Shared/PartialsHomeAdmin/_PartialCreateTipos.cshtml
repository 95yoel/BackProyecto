@{
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="@Tipos.Cruceros">Cruceros</option>
                    <option value="@Tipos.Temporada">Temporada</option>
                    <option value="@Tipos.Espana">España</option>
                    <option value="@Tipos.Europa">Europa</option>
                    <option value="@Tipos.Diversion">Diversión</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex;justify-content:space-between;">
                <button type="submit" class="btn btn-success" id="btnSubmit">
                    <i class="fa-solid fa-plus"></i>
                </button>

                <div>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-x" style="color: #ffffff;"></i></a>
                </div>
            </div>

        </form>
    </div>
</div>

