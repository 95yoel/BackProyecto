@model IEnumerable<AsturTravel.Models.Destinos>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div id="contenidoDestinos">
    <p>
        <a id="btnNuevoDestino" class="btn btn-dark" asp-action="Create">Nuevo destino</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    Ruta
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <img width="100px" src="@Html.DisplayFor(modelItem => item.Imagen)">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Imagen)
                    </td>
                    <td>
                        <table style="border:none;background:none;box-shadow:none;">
                            <tr>
                                <td>
                                    <button id="btnEditarDestino" onclick="editarDestino(@item.Id)" style="border:none"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button>
                                </td>
                                <td>
                                    <form style="border:none;background:none;box-shadow:none;" method="post" action="@Url.Action("Delete2", "Destinos", new { id = item.Id })">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este destino?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                                    </form>
                                </td>
                            </tr>
                        </table>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="js/destinos/destinos.js"></script>