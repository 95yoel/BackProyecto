@model AsturTravel.Models.Viajes
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Nombre" class="form-control" />
                    <span style="margin-left:5px;" class="input-group-text"></span>
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="DestinoId" class="form-control" asp-items="ViewBag.DestinoId">
                        <option style="text-align:center;font-style:italic;" value="-1" disabled selected>Elige un destino</option>
                    </select>
                    <span style="margin-left:5px;" class="input-group-text"></span>
                </div>
            </div>
            <div class="form-group">
                <label style = "margin-left:0;">Tipo de viaje</label>
                <div class="input-group">
                    <select asp-for="TipoViajeId" class="form-control" asp-items="ViewBag.TipoViajeId">
                        <option style="text-align:center;font-style:italic;" value="-1" disabled selected>Elige un viaje</option>
                    </select>
                    <span style="margin-left:5px;" class="input-group-text"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FechaSalida" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="FechaSalida" class="form-control" />
                    <span style="margin-left:5px;" class="input-group-text"></span>
                </div>

                <span asp-validation-for="FechaSalida" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="FechaLlegada" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="FechaLlegada" class="form-control" />
                    <span style="margin-left:5px;" class="input-group-text"></span>
                </div>
                <span asp-validation-for="FechaLlegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioString" class="control-label"></label>
                <div class="input-group">
                    <input style="text-align:right;" asp-for="PrecioString" class="form-control" />
                    <span style="margin-left:5px;" class="input-group-text">€</span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImagenFile" class="control-label"></label>
                <input asp-for="ImagenFile" type="file" class="form-control" />

                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="display:flex;justify-content:space-between;">
                <button type="submit" class="btn btn-success" id="btnSubmit">
                    <i class="fa-solid fa-plus"></i>
                </button>

                <div>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-x" style="color: #ffffff;"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/viajes/create-viajes.js"></script>