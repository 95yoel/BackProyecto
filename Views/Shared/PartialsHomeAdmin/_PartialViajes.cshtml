@model IEnumerable<AsturTravel.Models.Viajes>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}
<div id="contenidoViajes">
    <p>
        <a id="btnNuevoViaje" class="btn btn-dark" asp-action="Create">Nuevo viaje</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destino)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoViaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaSalida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaLlegada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destino.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoViaje.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaSalida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaLlegada)
                    </td>
                    <td>
                        <img width="100px" src="@Html.DisplayFor(modelItem => item.Imagen)">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <table style="border:none;background:none;box-shadow:none;">
                            <tr>
                                <td>
                                    <button id="btnEditarViaje" onclick="editarViaje(@item.Id)" style="border:none"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button>
                                </td>
                                <td>
                                    <form style="border:none;background:none;box-shadow:none;" method="post" action="@Url.Action("Delete2", "Viajes", new { id = item.Id })">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este destino?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="/js/viajes/viajes.js"></script>
    

