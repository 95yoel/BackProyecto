@model IEnumerable<AsturTravel.Models.Reservas>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div id="contenidoReservas">
    <p>
        <a id="btnNuevoReserva" class="btn btn-dark" asp-action="Create">Nueva reserva</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Viaje)
                </th>
                <th>
                    Fecha reserva
                </th>
                <th>
                    Fecha pago
                </th>
                <th>
                    Fecha cancelación
                </th>
                <th>
                    Fecha modificación
                </th>
                <th>
                    Número personas
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Viaje.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaReserva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCancelacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaModificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroPersonas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                    <td style="display:block;">
                        <form style="border:none;background:none;box-shadow:none; display: inline-block;" method="post" action="@Url.Action("Delete2", "Reservas", new { id = item.Id })">
                                @Html.AntiForgeryToken()
                            <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reserva?')" class="btn"><i class="fa-solid fa-trash" style="color: #000000;"></i></button>
                        </form>
                        <form style="border:none;background:none;box-shadow:none; display: inline-block;" method="post" action="@Url.Action("Cancelar", "Reservas", new { id = item.Id })">
                                @Html.AntiForgeryToken()
                            <button type="submit" onclick="return confirm('¿Estás seguro de que deseas cancelar esta reserva?')" class="btn"><i class="fa-solid fa-ban"></i></button>
                        </form>
                        <button id="btnEditarReserva" onclick="editarReserva(@item.Id)" style="border:none; display: inline-block;"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button>
                    </td>

                
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/reservas/reservas.js"></script>